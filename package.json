{
  "name": "rspl",
  "version": "1.0.0",
  "source": "src/index.html",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "jest": "^29.7.0",
    "parcel": "^2.10.0",
    "showdown": "^2.1.0"
  },
  "targets": {
    "cli": {
      "optimize": true,
      "context": "node",
      "isLibrary": true,
      "sourceMap": false,
      "outputFormat": "esmodule",
      "includeNodeModules": {
        "typescript": false,
        "vscode": false
      }
    }
  },
  "scripts": {
    "start": "yarn parcel src/web/index.html",
    "build": "parcel build --public-url '/rspl'",
    "build:cli": "parcel build --target cli src/cli.js && mv dist/cli.js dist/cli.mjs",
    "build:lang": "nearleyc src/lib/grammar.ne -o src/lib/grammar.cjs",
    "clean": "rm -rf .parcel-cache && rm -rf dist",
    "test": "NODE_OPTIONS=--experimental-vm-modules yarn jest"
  },
  "dependencies": {
    "ace-builds": "^1.30.0",
    "highlight.js": "^11.9.0",
    "moo": "^0.5.2",
    "nearley": "^2.20.1"
  }
}
